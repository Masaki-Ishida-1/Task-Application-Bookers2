<h2 class="mt-3">New book</h2>
<%= form_with model: @book do |f| %>
<div class="title">
  <%= f.label :title,"Title" %>
  <%= f.text_field :title %>
</div>
<div class="body">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>