<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div class="text-danger">
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= @book.errors.count %>errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      </div>
    	<%= form_with model: @book, local: true do |f| %>
          <div class="form-group">
            <label for="input Name">Title</label><br>
           <%= f.text_field :title, autofocus: true, id:"book_title", class:'form-control title' %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Opinion</label><br>
            <%= f.text_area :body, autofocus: true, id:"book_body", class: 'form-control body' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book", class:'btn btn-success' %>
          </div>
        <% end %>
        <%= link_to "show" ,book_path(@book) %>
        |
        <%= link_to "Back" ,books_path %>
    </div>
  </div>
</div>