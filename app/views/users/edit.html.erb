<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="text-danger">
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      </div>
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-group">
           <label for="input Name">Name</label><br>
           <%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control name' %>
          </div>
          <div class="form-group">
            <label for="user_image">Image</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label><br>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: 'form-control introduction' %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class:'btn btn-secondary' %>
          </div>
        <% end %>
    </div>
  </div>
</div>